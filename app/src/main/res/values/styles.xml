<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorSecondary">@color/cyan_400</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:letterSpacing">0</item>
    </style>


    <!--Multi State Layout attrs-->
    <declare-styleable name="app">
        <attr name="loadingLayout" format="reference" />
        <attr name="emptyLayout" format="reference" />
        <attr name="contentLayout" format="reference" />
    </declare-styleable>
    <!---->

</resources>
